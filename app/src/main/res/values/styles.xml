<resources>
    <color name="background">#ffffff</color>
    <color name="fontColor">#ffff00</color>
    <color name="fontErrorColor">#C80000</color>
    <color name="fontAviableColor">#4CAF50</color>
    <color name="inputFontColor">#323232</color>
    <color name="buttonBackgroundColor">#ffff00</color>
    <color name="buttonFontColor">#ffffff</color>

    <style name="fullScreenStyle" parent="Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="labelStyle" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="textInputStyle">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColor">@color/inputFontColor</item>
        <item name="android:backgroundTint">@color/inputFontColor</item>
    </style>

    <style name="buttonStyle">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:background">@color/buttonBackgroundColor</item>
        <item name="android:textColor">@color/buttonFontColor</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">10</item>
    </style>
</resources>
